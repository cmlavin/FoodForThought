<div class="row">

<div class="col s10 push-s1 m8 push-m2 l6 push-l3">

<% if logged_in? %>
  <h1>Welcome back <%= current_user %>!</h1>
  <h3>All of <%= @user.first_name %>'s recipes</h3>
  <% @recipes.each do |recipe| %>
  <%= link_to recipe.name, recipe_path(recipe) %>
  <% end %>
  <h3>All of <%= @user.first_name %>'s stories</h3>
  <% @stories.each do |story| %>
  <%= link_to story.title, story_path(story) %>
  <% end %>
  <h3> Saved recipes </h3>
  <% @user.fav_recipes.each do |fav_recipe| %>
  <%= link_to fav_recipe.name, @fav_recipe %>
  <% end %>
  <h3> Saved stories </h3>
  <% @user.fav_stories.each do |fav_story| %>
  <%= link_to fav_story.name, @fav_story %>
  <% end %>
<% else %>
  <h1> Welcome </h1>
  <%= link_to "Signup for an account", new_user_path %><br>
<% end %>

<%= @user.user_name %><br>
<%= link_to "Update #{@user.user_name}", edit_user_path %><br>

<%= form_for @user, method: :delete do |f| %>
  <%= f.submit "Delete Account"%>
<% end %>
</div>
</div>
