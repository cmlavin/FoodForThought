<div class="row">

<div class="col s10 push-s1 m8 push-m2 l6 push-l3">
<h1>Post a New Recipe</h1>
<%= form_tag add_ingredient_path, method: :post do %>

<h2>List of Ingredients:</h2>
<ul>
  <% @ingredients.each do |ingredient| %>
  <li> <%= check_box_tag 'ingredient_ids[]', ingredient.id -%>
      <%= h ingredient.name -%>
  </li>
  <% end %>
</ul>
<label>Ingredient Name:</label>
<%= text_field_tag :name %><br>
<%= submit_tag "Add/Remove Ingredient" %>
<% end %>

<%= form_for @recipe do |f| %>
  <label>Recipe Name:</label>
  <%= f.text_field :name %>

  <label>Instructions:</label>
  <%= f.text_area :instruction %>

  <label>Difficulty:</label>
  <%= f.select :difficulty, (1..5) %>

  <label>Image URL:</label>
  <%= f.text_field :image_url %>

  <%= f.submit %>
<% end %>
</div></div>
