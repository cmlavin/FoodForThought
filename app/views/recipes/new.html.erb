<div class="row">

<div class="col s10 push-s1 m8 push-m2 l6 push-l3">
<h1>Post a New Recipe</h1>
<%= form_tag add_ingredient_path, method: :post do %>

  <h6>List of Ingredients:</h6>
    <% @ingredients.each do |ingredient| %>
      <p> <%= check_box_tag 'ingredient_ids[]', ingredient.id -%>
          <%= h ingredient.name -%>
      </p>
      <% end %>
  <label>Ingredient Name:</label>
  <%= text_field_tag :name %><br>
  <%= submit_tag "Add/Remove Ingredient" %>
<% end %>

<%= form_for @recipe do |f| %>
  <label>Recipe Name:</label>
  <%= f.text_field :name %>

  <label>Instructions:</label>
  <%= f.text_area :instruction %>

  <label>Difficulty:</label>
  <%= f.select :difficulty, (1..5) %><br>

  <%= f.fields_for @image do |u| %>
    <label>Upload Image:</label>
    <%= u.file_field :image %><br>
  <% end %>

  <%= f.submit %>
<% end %>
</div></div>
