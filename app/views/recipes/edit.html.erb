<div class="container">

  <div class="col s10 push-s1 m8 push-m2 l6 push-l3">
    <h1><%= @recipe.name %></h1>
    <img class="responsive-img" src="<%= @recipe.image_url%>" alt="Recipe Image">
    <div class="">

    <%= @recipe.updated_at ? "Updated at: #{@recipe.updated_at}" :  "Created at: #{@recipe.created_at}"%><br>

    <h1>Update Recipe</h1>
    <%= form_for @recipe do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <label>Uncheck to Remove Ingredient(s):</label>
    <%= f.collection_check_boxes :ingredient_ids, @recipe.ingredients, :id, :name, class: ""%><br>

    <label>Add Ingredient:</label><br>
    <label>Ingredient Name:</label>
    <input type="text" name="recipe[ingredient][name]"><br>

    <label>Ingredient Quantity:</label>
    <input type="text" name="recipe[ingredient][quantity]"><br>

    <label>Ingredient Unit:</label>
    <input type="text" name="recipe[ingredient][unit]"><br>

    <%= f.label :instruction %>
    <%= f.text_area :instruction %>
    <div class="row">
      <div class="input-field col s12 m6">
    <label for="recipe_difficulty">Difficulty:</label><br>
    <%= f.select :difficulty, (1..5), {}, {class: "input-field", style: "display:inline;"} %><br>
  </div>

  <%= f.fields_for @image do |u| %>
  <label>Upload Image</label>
  <div class="file-field input-field col s12 m6">
    <div class="waves-effect waves-light btn red lighten-1">
      <span>Choose File</span>
      <input class="input-field" type="file" name="recipe[image][image]" id="recipe_image_image">
    </div>
    <div class="file-path-wrapper">
      <input class="file-path validate" type="text">
    </div>
  </div>
<% end %>

  </div>
  <%= f.submit nil, class: "input-field btn red lighten-1" %>
  <% end %>
</div>
<br>
