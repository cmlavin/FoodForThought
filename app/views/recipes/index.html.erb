<div class="row">
<div class="col s10 push-s1 m8 push-m2 l6 push-l3">
<h1>All recipes:</h1>
<div class="row">
<% @recipes.each do |recipe| %>
<div class="col s12 m4 l4">
  <div class="card">
    <div class="card-image">
      <img src="<%= recipe.image_url %>">
    </div>
    <div class="card-content">
      <span class="card-title"><%= recipe.name %></span>
      <span class="chip amber lighten-1 white-text">Difficulty: <%= recipe.difficulty %></span>
    </div>
    <div class="card-action">
      <%= link_to "Read", recipe_path(recipe), class: "waves-effect waves-light btn red lighten-1" %>
    </div>
  </div>
</div>
<% end %>
</div>

<% if @recipes.blank? %>
  <h4>There are no recipes containing the term <%= params[:search] %>.</h4>
<% end %>
