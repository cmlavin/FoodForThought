      <a id="logo-container" href="/" class="brand-logo container"><img vspace="7" src="/img/food_for_thought.svg" height="50" alt="Food for Thought logo"></a>
      <ul class="right hide-on-med-and-down">
        <% if logged_in? %>
          <a class="dropdown-button" href="#!" data-activates="user_dropdown">Account<i class="material-icons right">arrow_drop_down</i></a></li>
        <% else %>
            <li><%= link_to "Log In", login_path %> </li>
        <% end %>
      </ul>

      <ul id="nav-mobile" class="side-nav">
